/* MIXINS & UTILITIES
*********************/
.image-replacement {
  overflow: hidden;
  text-indent: -1000%;
  white-space: nowrap;
}

@mixin clearfix {
  &:before,
  &:after {
    content: " "; /* 1 */
    display: table; /* 2 */
  }

  &:after {
    clear: both;
  }
}

@mixin vendor-prefix($name, $argument) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

.centered {
  text-align: center;
}

@mixin unstyled-list {
  list-style: none outside none;
  padding-left: 0;
}

@mixin hoz-list {
  margin-left: -0.5em;
  li {
    display: inline-block;
    margin: 0 0.5em;
  }
}

.visually-hidden {
  display: none;
  visibility: hidden;
}

/* BASE STYLES
*********************/

*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
 }

.page-wrapper {
  max-width: 68em;
  margin: 0 auto;
  padding: 0 1em;
  @media (min-width:$medium_screen) {
    padding: 0 2em;
  }

  @media (min-width:$large_screen) {
    padding: 0 4em;
  }
}

body {
  color: $colour_black;
  font-family: $body_typeface;
  font-size: 1.125em; //18px
  height: 100%;
  line-height: 1.388888889em; //25px
  min-height: 100%;
  @media (min-width:$medium_screen) {
    line-height: 1.5em; //27px
  }
  @media (min-width: 120em) {
    font-size: 1.3125em; //21px
  }
}

a {
  color: $colour_links;
  text-decoration: none;
  &:hover,
  &:active,
  &:focus {
    color:darken($colour_links, 10%);
  }
}

h1, h2, h3, h4, h5, h6 {
  font-family: $heading_typeface;
  line-height: 1.1em;
  margin-bottom: 0.33em;
  margin-top: 0;
  font-weight: $heading_typeface_bold;
  text-transform: uppercase;
  font-style: italic;
  b, strong {
    font-weight: $heading_typeface_bold;
  }
}

h1,
.primary-heading {
    font-size: 2.666666667em; //48px
    @media (min-width:$medium_screen) {
      font-size: 4em; //72px
    }
}

h2,
.secondary-heading {
  font-size: 2em; //36px
  @media (min-width:$medium_screen) {
    font-size: 2.444444444em; //44px
  }
}

h3,
.tertiary-heading {
  font-size: 1.166666667em; //21px
  line-height: 1.4em;
  @media (min-width:$medium_screen) {
    font-size: 1.277777778em; //23px
  }
}

h4,
.quarternary-heading {
  font-size: 1.055555556em; //19px
  @media (min-width:$medium_screen) {
    font-size: 1.166666667em; //21px
  }
}

p {
  margin: 0 0 1em 0;
}

pre, code, kbd, samp {
  font-family: Consolas, 'Liberation Mono', Courier, monospace;
}

code {
  @include vendor-prefix(border-radius, $border_radius);
  border: 1px solid $colour_borders;
  padding: 0 0.2em;
}

pre {
  background-color: $colour_background;
  @include vendor-prefix(border-radius, $border_radius);
  border: 1px solid $colour_borders;
  display: block;
  font-size: .9375em;
  line-height: 1.4375em;
  max-width: 100%;
  overflow-x: scroll;
  padding: 1em;
  white-space: pre-wrap;
  code {
    border: none;
    padding: 0;
  }
}

hr {
  border: none;
  border-top: 1px solid $colour_borders;
  margin: 0;
}

audio,
video,
img {
  max-width: 100%;
  height: auto;
}

ol,
ul {
  padding-left: 1.8em;
}

th {
  text-align: left;
}

strong, b {
  font-weight: $body_typeface_bold;
}

mark {
  background-color: lighten($colour_red, 20%);
}

blockquote {
  @include vendor-prefix(border-radius, $border_radius);
  clear: both;
  color: $colour_dark_grey;
  font-size: 1.125em;
  font-style: italic;
  line-height: 1.5em;
  margin: 1em 0;
  padding: 1em 1em 1em 1.5em;
}

input[type=file] {
  max-width: 100%;
  width: 100%;
}

input[type=text],
input[type=password],
input[type=url],
input[type=email],
input[type=number],
input[type=tel],
input[type=search],
input[type=time],
input[type=datalist],
input[type=date],
textarea,
.standard-input {
  @include vendor-prefix(border-radius, $border_radius);
  border: 1px solid $colour_borders;
  max-width: 100%;
  padding: 0.66em;
}

input[type=text],
input[type=password],
input[type=url],
input[type=email],
input[type=number],
input[type=tel],
input[type=search],
textarea {
  -webkit-appearance: none;
}

fieldset {
  padding: 0;
  border: 0;
  margin: 0;
}

legend {
  font-family: $heading_typeface;
  font-size: 1.764705882em;
  font-weight: $heading_typeface_bold;
  line-height: 1.1em;
  margin-bottom: 0.33em;
}

table {
  border-collapse: collapse;
  font-size: 0.875em;
  margin: 1em 0;
  max-width: 100%;
  width: 100%;
  p {
    margin: 0;
  }
}

td, th {
  border-bottom: 1px solid $colour_borders;
  padding: 0.75em 0.6em;
  text-align: left;
}

th {
  background: inherit;
}

th[scope="row"] {
  color: $colour_dark_grey;
}

tbody {
  tr:hover {
    background-color: $colour_background;
    th[scope="row"] {
      color: $colour_black;
    }
  }
}

caption {
  color: $colour_dark_grey;
  margin: 0;
  padding: 0.5em 0;
  text-align: left;
}

tfoot {
  font-size: 0.875em;
  font-weight: normal;
  td {
    text-align: right;
    border: none;
  }
}

.button {
  display: inline-block;
  font-size: 1.4375em;
  text-transform: uppercase;
  font-family: $heading_typeface;
  font-weight: $heading_typeface_bold;
  font-style: italic;
  padding: 0.7em 1.3em;
  color: $colour_white;
  background-color: $colour_red;
  border: 0;
  @include vendor-prefix(transform, skew(-10deg));
  &:hover,
  &:active,
  &:focus {
    background-color: darken($colour_red, 10%);
    color: $colour_white;
  }
}

.button__text {
  position: relative;
  z-index: 3;
  display: inline-block;
  @include vendor-prefix(transform, skew(10deg));
}

.button--twopart {
  padding: 0;
  position: relative;
  z-index: 2;
  width: 100%;
  @media (min-width:$medium_screen) {
    width: auto;
  }
}

.button--twopart__one,
.button--twopart__two {
  padding: 0.5em 1em;
  display: block;
  @media (min-width:$medium_screen) {
    display: inline-block;
  }
}

.button--twopart__two {
  background-color: $colour_white;
  color: $colour_red;
  font-weight: $heading_typeface_semibold;
  right: -1px;
  position: relative;
  @media (max-width:$medium_screen) {
    font-size: 0.65em;
    right: 0;
  }
}

.button--small {
  font-size: 1em;
  padding: 0.3em 1em;
  @include vendor-prefix(transform, skew(0deg));
}

.button--secondary {
  background-color: $colour_yellow;
  color: $colour_black;
  &:hover,
  &:active,
  &:focus {
    background-color: lighten($colour_yellow, 5%);
    color: $colour_blue;
  }
}

.button--social {
  font-size: 0.875em;
  padding: 0.3em 1em;
  letter-spacing: 0.1em;
  font-weight: normal;
}

.button--facebook {
  background-color: #3b5998;
  &:hover,
  &:active,
  &:focus {
    background-color: darken(#3b5998, 10%);
  }
}

.button--twitter {
  background-color: #55acee;
  &:hover,
  &:active,
  &:focus {
    background-color: darken(#55acee, 10%);
  }
}

/* HEADER
*********************/
.site-navigation {
  background-color: $colour_white;
  position: relative;
  min-height: 3.333333333em;
  padding: 1em;
  @media (min-width:$medium_screen) {
    padding: 0;
  }
}

.site-navigation__title {
  display: inline-block;
  text-align: center;
  width: 100%;
  @media (min-width:$medium_screen) {
    position: absolute;
    left: 1em;
    top: 0.95em;
    z-index: 3;
    cursor: pointer;
    text-align: left;
    width: auto;
  }
  h1 {
    display: inline-block;
    font-size: 1.277777778em;
    font-style: italic;
    color: $colour_red;
    font-family: $heading_typeface;
    font-weight: $heading_typeface_bold;
  }
}

.site-navigation__main-nav {
  @include unstyled-list;
  display: none;
  @media (min-width:$medium_screen) {
    display: block;
    @include hoz-list;
    position: relative;
    top: 0.9em;
    margin: 0 0 0 13em;
  }
  @media (min-width:$large_screen) {
      margin: auto;
      position: absolute;
      left: 0; right: 0;
      text-align: center;
  }
  a {
    color: $colour_black;
    font-family: $body_typeface;
    font-weight: $body_typeface_bold;
    text-transform: uppercase;
    &:hover,
    &:active,
    &:focus {
      color: $colour_red;
    }
  }
}

.site-navigation__actions {
  text-align: center;
  @media (min-width:$medium_screen) {
    position: absolute;
    right: 1em;
    top: 0.95em;
    text-align: left;
  }
  a {
    display: inline-block;
    font-size: 1em;
    font-family: $heading_typeface;
    font-weight: $heading_typeface_bold;
    font-style: italic;
    text-transform: uppercase;
    font-size: 1.277777778em;
    &:hover,
    &:active,
    &:focus {
      color: $colour_red;
    }
  }
}

.actions__buy {
  color: $colour_blue;
  margin-right: 1em;
}

.actions__cart {
  color: $colour_black;
}

.actions__cart__count {
  display: inline-block;
  font-size: 0.5em;
  background-color: #f11b19;
  color: #fff;
  width: 1.7em;
  height: 1.7em;
  border-radius: 1em;
  text-align: center;
  line-height: 1.85em;
  position: relative;
  top: -0.3em;
}

/* FOOTER
*********************/

.site-footer {
  background-color: $colour_black;
  color: $colour_white;
  padding: 2em 0;
  @include clearfix;
  @media (min-width: $medium_screen) {
    padding: 3em 0;
  }
}

.site-footer__about {
  float: left;
  width: 100%;
  @media (min-width: $medium_screen) {
    width: 25%;
  }
}

.site-footer__company-info {
  color: $colour_mid_grey;
  font-size: 0.875em;
  text-align: center;
  @media (min-width: $medium_screen) {
    text-align: left;
  }
}

.site-footer__nav {
  float: left;
  width: 100%;
  @media (min-width:$medium_screen) {
    width: 72%;
    margin-left: 3%;
  }
  .site-navigation__main-nav {
    padding-bottom: 1em;
    border-bottom: 3px solid transparentize(#000000, 0.8);
    @include unstyled-list;
    display: block;
    @media (min-width:$medium_screen) {
      position: static;
      margin: 0;
    }
    @media (min-width:$large_screen) {
        margin: 0;
        text-align: left;
        position: static;
    }
    a {
      color: $colour_white;
      font-family: $body_typeface;
      font-weight: normal;
      font-size: 1em;
      text-transform: none;
      &:hover,
      &:active,
      &:focus {
        color: $colour_yellow;
      }
    }
  }
}

.social-links {
  margin-top: 1.5em;
  .button {
    margin-right: 1em;
  }
}

/* HOMEPAGE
*********************/

.homepage-hero {
    background-color: #DCF1F3;
    background-image: url(../assets/small-bg.png);
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: center bottom;
    z-index: 1;
    padding: 2em 0 13em;
    @media (min-width: $medium_screen) {
      background-position: center center;
      background-image: url(../assets/big-bg.png);
      background-size: cover;
      padding: 4em 0 13em;
    }
}

.atp-logo {
  max-height: 100.5px;
  max-width: 131.5px;
  margin: 0 auto 0.5em;
  position: relative;
  @media (min-width: $medium_screen) {
    max-height: 201px;
    max-width: 263px;
    margin: 0 0 0.5em;
  }
}

.atp-logo--small {
  max-height: 100.5px;
  max-width: 131.5px;
  display: block;
}

.homepage-hero__tagline {
  max-width: 34em;
  h2 {
    font-weight: $heading_typeface_semibold;
    margin-bottom: 1.2em;
    line-height: 1em;
    font-size: 1.5em;
    text-align: center;
    @media (min-width: $medium_screen) {
      font-size: 2.75em;
      text-align: left;
    }
  }
}

.product-description {
  background-color: $colour_white;
  padding: 3em 0;
  margin-bottom: 3em;
  .page-wrapper {
    position: relative;
  }
}

.product-photo {
  z-index: 3;
  margin-top: -14em;
  width: 70%;
  margin-left: 15%;
  @media (min-width: 30em) {
    margin-top: -16em;
  }
  @media (min-width:$medium_screen) {
    position: absolute;
    top: -6em;
    left: 2em;
    width: 29%;
    margin: 0;
  }
  @media (min-width:$large_screen) {
    left: 4em;
  }
  img {
    width: 100%;
    height: auto;
    max-width: 100%;
    text-align: center;
  }
}

.low-stock-warning {
  display: block;
  background-color: $colour_yellow;
  padding: 0.33em 0.66em;
  margin-top: 1em;
  width: auto;
  font-weight: $body_typeface_bold;
}

.product-description__blurb {
  font-size: 1em;
  line-height: 1.4em;
  margin-top: 2em;
  @media (min-width:$medium_screen) {
    margin-left: 37%;
    margin-top: 0;
    font-size: 1.4375em;
    line-height: 1.4em;
  }
  p {
    margin-bottom: 2em;
  }
}

.product-specs {
  background-color: $colour_blue;
  padding: 0 2em;
  position: relative;
  @media (min-width:$medium_screen) {
    padding: 0;
    @include vendor-prefix(transform, skew(-10deg));
  }
  &:after {
    @media (min-width:$medium_screen) {
      content:"";
      display: block;
      position: absolute;
      left: -99%;
      top: 0;
      height: 3.5em;
      width: 100%;
      background-color: $colour_blue;
    }
  }
}

.product-specs__list {
  @include unstyled-list;
  font-size: 1.4375em;
  font-family: $heading_typeface;
  font-weight: $heading_typeface_semibold;
  font-style: italic;
  color: $colour_white;
  padding: 0.7em 0;
  margin-bottom: 0;
  @media (min-width:$medium_screen) {
    @include hoz-list;
    margin-left: 37%;
    @include vendor-prefix(transform, skew(10deg));
  }
  li {
    margin-right: 1em;
    margin-left: 0;
    margin-bottom: 0.5em;
    @media (min-width:$medium_screen) {
      margin-bottom: 0;
    }
  }
}

/* STANDARD PAGE
*********************/
.section-header {
  background-color: #DCF1F3;
  background-image: url(../assets/photo-bg.jpg);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  padding: 2em 0 0;
  @media (min-width:$medium_screen) {
    padding: 4em 0 1em;
  }
}

.section-header--no-background {
  background-image: none;
  background-color: transparent;
}

.section-header--centred {
  text-align: center;
}

.section-header--white {
  h1 {
    color: $colour_white;
  }
}

.standard-content-page {
  margin-top: 2em;
  margin-bottom: 3em;
  @media (min-width:$medium_screen) {
    margin-top: 3em;
  }
}

.rich-text {
  max-width: 37em;
}

.fill-background {
  background-color: #DCF1F3;
  background-image: url(../assets/small-bg.png);
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center bottom;
  @include clearfix;
  background-color: #DCF1F3;
  @media (min-width: $medium_screen) {
    background-position: center center;
    background-image: url(../assets/big-bg.png);
    background-size: cover;

  }
}

/* SHOPIFY STUFF
*********************/

.shopping-cart {
  margin: 2em auto 10em;
  background-color: $colour_white;
  width: 100%;
  @media (min-width: $medium_screen) {
    display: table;
  }
}

.cart-contents {
  padding: 1.5em;
  @include clearfix;
  @media (min-width: $medium_screen) {
    width: 70%;
    display: table-cell;
  }
}

.cart-summary {
  .quarternary-heading {
    font-family: $body_typeface;
    font-weight: normal;
    font-style: normal;
    font-size: 0.75em;
  }
  padding: 2em;
  @media (min-width: $medium_screen) {
    width: 30%;
    display: table-cell;
  }
}

.checkout-controls {
  width: 100%;
  padding: 1.5em;
  border-top: 1px solid $colour_lighter_grey;
}

.cart-item {
  @include clearfix;
  position: relative;
  background-color: $colour_off_white;
  margin-bottom: 2em;
  padding: 0.75em;
  @media (min-width: $medium_screen) {
    padding: 1.5em;
  }
}

.cart-item__image {
  width: 100%;
  margin-bottom: 0.5em;
  max-width: none;
  @media (min-width: $medium_screen) {
    width: 180px;
    float: left;
  }
}

.cart-item__description {
  @media (min-width: $medium_screen) {
    margin-left: 210px;
  }
}

.cart-item__title {
  display: block;
  font-weight: $body_typeface_bold;
  font-size: 1.166666667em;
  margin-bottom: 0.5em;
  @media (min-width: $medium_screen) {
    font-size: 1.4375em;
  }
}

.cart-item__variant {
  font-size: 0.777777778em;
  color: $colour_mid_grey;
}

.qty-container {
  input {
    max-width: 3em;
    padding: 0.33em;
    font-size: 0.777777778em;
  }
  label {
    font-size: 0.777777778em;
  }
}

.cart-item__price {
  font-size: 0.777777778em;
}

.cart-item__line-price {
  font-weight: $body_typeface_bold;
  margin-top: 0.5em;
}

.cart-item__remove {
  position: absolute;
  top: 0;
  right: 1em;
  color: $colour_mid_grey;
  font-weight: $body_typeface_bold;
}

.cart-summary {
  background-color: $colour_black;
  color: white;
}

.cart-subtotal__note {
  width: 100%;
  font-size: 0.875em;
  line-height: 1.5em;
  margin-top: 0.5em;
  padding-top: 0.5em;
  border-top: 0.3em solid lighten($colour_black, 10%);
  color: $colour_grey;
}

.cart-subtotal__label {
  font-family: $heading_typeface;
  font-weight: $heading_typeface_semibold;
  font-style: italic;
  text-transform: uppercase;
  color: $colour_mid_grey
}

.cart-subtotal__price {
  font-family: $heading_typeface;
  font-weight: $heading_typeface_bold;
  font-style: italic;
}

.label-value-layout {
  display: table;
  width: 100%;
}

.label-value-layout__label {
  display: table-cell;
  width: 50%;
}

.label-value-layout__value {
  display: table-cell;
  width: 50%;
  text-align: right;
}

.cart__additional-checkout-buttons {
  margin-top: 1.5em;
}
